extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Periodo Edit
           
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" value=periodo.id readonly)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=periodo.nome)
                label Origem
                input.w3-input.w3-round(type="text" name="origem" value=periodo.origem)
                label Seculo
                input.w3-input.w3-round(type="text" name="sec" value=periodo.sec)
                label Descricao
                input.w3-input.w3-round(type="text" name="desc" value=periodo.desc)
        
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
                
        footer.w3-container.w3-purple
            h5 Generated by Vicente Martins in #{date}
            a(href="/periodos") Return