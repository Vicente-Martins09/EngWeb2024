extends layout

block content
     .w3-card-4
        header.w3-container.w3-teal
            h1 Periodo #{periodo.id}

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li
                    b Nome:  #{periodo.nome}
                li
                    b Origem:  #{periodo.origem}
                li
                    b Seculo: #{periodo.seculo}
                li
                    b Descricao: #{periodo.desc}
            
            
        footer.w3-container.w3-teal
            h5 Generated by Vicente Martins by #{date}
            a(href="/periodos") Voltar