extends layout

block content

     .w3-card-4
        header.w3-container.w3-purple
            h2 periodo Add
                    
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="_id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Origem
                input.w3-input.w3-round(type="text" name="origem")
                label Seculo
                input.w3-input.w3-round(type="text" name="seculo")
                label Descricao
                input.w3-input.w3-round(type="text" name="desc")
            
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
                    

        footer.w3-container.w3-purple
            h5 Generated by Vicente Martins in #{d} 
            a(href="/periodos") Return