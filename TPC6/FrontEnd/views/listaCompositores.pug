extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Compositores Lista
                a.w3-btn.w3-round.w3-grey(href="/compositores/Add") +
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th Bio
                    th DataNascimento
                    th DataObito
                    th Periodos
                    th Actions
                
                each compositor in lCompositores
                    tr
                        td= compositor._id
                        td
                            a(href="/compositores/" + compositor._id)= compositor.nome

                        td= compositor.bio
                        td= compositor.dataNasc
                        td= compositor.dataObito
                        td= compositor.periodo
                        td 
                            a.w3-button.w3-blue(href="/compositores/edit/" + compositor._id) Edit
                            a.w3-button.w3-red(href="/compositores/delete/" + compositor._id) Delete
                        
                
        footer.w3-container.w3-blue
            h5 Generated by Vicente Martins in #{date}