extends layout

block content
    .w3-card-4  
        header.w3-container.w3-teal  
            h1 
                span Periodo Lista
                a.w3-btn.w3-round.w3-grey(href="/periodos/Add")  +
        
        .w3-container  
            table.w3-table-all  
                tr 
                    th Id
                    th Name
                    th Origem
                    th Seculo
                    th Descrição
                    th Actions
            
                each periodo in lPeriodos
                    tr 
                        td= periodo._id
                        td
                            a(href="/periodos/"+ periodo._id)= periodo.nome
                        td= periodo.origem 
                        td= periodo.seculo 
                        td= periodo.desc 
                        td 
                            a.w3-button.w3-blue(href= "/periodos/edit/" + periodo._id)  Edit
                            a.w3-button.w3-red(href= "/periodos/delete/" + periodo._id) Delete
                    
                    
                
        footer.w3-container.w3-blue  
            h5 Generated by Vicente Martins in #{date} 