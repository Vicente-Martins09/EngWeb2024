extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Compositor #{compositor._id}

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li
                    b Nome: #{compositor.nome}
                li
                    b Bio: #{compositor.bio}
                li
                    b DataNascimento: #{compositor.dataNasc}
                li
                    b DataObito: #{compositor.dataObito}
                li
                    b Periodo: #{compositor.periodo}

        footer.w3-container.w3-teal
            h5 Generated by Vicente Martins in #{date}
            a(href="/compositores") Voltar